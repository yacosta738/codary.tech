---
// Layout that extends Base and adds Footer
// For pages that need the standard footer

import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import LocaleSuggest from "@/components/i18n/LocaleSuggest.astro";
import Base from "@/layouts/Base.astro";

interface Props {
	title?: string;
	description?: string;
	frontmatter?: undefined;
}

const { title, description } = Astro.props.frontmatter || Astro.props;
---

<Base {title} {description}>
	<slot name="header" slot="header">
		<LocaleSuggest />
    <Header />
	</slot>
	<slot name="subheader" slot="subheader" />
	<div class="container mx-auto px-4 pt-24 prose lg:prose-xl xl:prose-2xl dark:prose-invert">
		<slot />
	</div>
  <Footer />
</Base>
