<form class="space-y-4">
  <div>
    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
      Correo electrónico
    </label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="tu@email.com"
      required
      class="w-full px-4 py-2 rounded bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-400 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-primary"
    />
  </div>
  <div class="flex items-start">
    <input
      type="checkbox"
      id="privacy"
      name="privacy"
      required
      class="mt-1 h-4 w-4 text-primary border-gray-300 rounded focus:ring-primary"
    />
    <label for="privacy" class="ml-2 block text-sm text-gray-500 dark:text-gray-400">
      Acepto recibir el boletín de noticias y la <a href="/privacidad" class="text-primary hover:underline">política de privacidad</a>
    </label>
  </div>
  <button
    type="submit"
    class="w-full bg-primary hover:bg-primary/90 text-white font-semibold py-2 px-4 rounded transition-colors"
  >
    Suscribirse al boletín
  </button>
</form>
