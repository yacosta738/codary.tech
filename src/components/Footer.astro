---
import Link from "@components/Links.astro";
import { Icon } from "astro-icon/components";
import { BRAND_NAME, FooterLinks, SocialLinks } from "src/site.config";
const today = new Date();
---
<footer class="mt-auto w-full max-w-[85rem] py-10 mx-auto">
  <nav class="mx-auto w-full max-w-[85rem] px-4" aria-label="Footer">
    <div class="flex flex-col items-center sm:flex-row sm:justify-between">
      <div id="navbar-alignment" class="internal-links sm:order-2">
        <div
          class="mt-2 flex flex-row gap-5 sm:mt-0 sm:flex-row sm:items-center sm:ps-5"
        >
          {
            FooterLinks.map((link) => (
              <Link
                href={link.href}
                class="inline-flex gap-x-2 text-sm text-neutral-500 hover:text-neutral-800 dark:text-neutral-500 dark:hover:text-neutral-200"
              >
                {link.title}
              </Link>
            ))
          }
        </div>
      </div>

      <div class="mt-2 flex flex-wrap gap-2 sm:order-3 sm:mb-0 sm:gap-0">
        {
          SocialLinks.map((link) => (
            <a
              href={link.href}
              class="inline-flex h-12 w-12 items-center justify-center gap-x-2 bg-white text-neutral-500 hover:text-neutral-800 disabled:pointer-events-none disabled:opacity-50 dark:text-neutral-500 dark:hover:text-neutral-200 dark:bg-neutral-900 dark:hover:bg-neutral-900"
              aria-label={link.label}
            >
              <Icon name={link.icon} class="icon-base" />
            </a>
          ))
        }
      </div>

      <div class="mt-2 sm:order-1 sm:mb-0">
        <a class="flex-none text-sm text-neutral-500 hover:text-neutral-800 dark:text-neutral-500 dark:hover:text-neutral-200" href="/" aria-label="Brand"
          >{BRAND_NAME} &copy; {today.getFullYear()}</a
        >
      </div>
    </div>
  </nav>
</footer>
