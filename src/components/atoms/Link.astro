---
export interface Props {
	href: string;
	ariaLabel?: string;
	class?: string;
	external?: boolean;
}

const {
	href,
	ariaLabel,
	class: className = "",
	external = false,
	...attrs
} = Astro.props;

// Base styling for links
const baseClass =
	"text-white hover:underline focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 transition-colors";
---

<a
  href={href}
  class:list={[baseClass, className]}
  aria-label={ariaLabel}
  {...external ? { target: "_blank", rel: "noopener noreferrer" } : {}}
    {...attrs}
>
  <slot />
</a>
