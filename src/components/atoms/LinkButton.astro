---
export interface Props {
	href: string;
	ariaLabel?: string;
	class?: string;
	external?: boolean;
}

const {
	href,
	ariaLabel,
	class: className = "",
	external = false,
	...attrs
} = Astro.props;

// Base class similar to Button component
const baseClass =
	"bg-zinc-900 dark:bg-white text-white dark:text-zinc-900 px-4 py-2 rounded font-medium hover:bg-zinc-800 dark:hover:bg-zinc-100 transition-colors relative flex items-center gap-2";
---

<a
  href={href}
  class:list={[baseClass, className]}
  aria-label={ariaLabel}
  {...external ? { target: "_blank", rel: "noopener noreferrer" } : {}}
    {...attrs}
>
<slot name="prefix" />
<slot />
<slot name="suffix" />
</a>
