---
import { type Lang, useTranslations } from "@/i18n";
import Layout from "@/layouts/General.astro";
import { Icon } from "astro-icon/components";

const t = useTranslations(Astro.currentLocale as Lang);

// Company email
const email = "hello@codary.tech";
---

<Layout
  title={t('contact.title')}
  description={t('contact.description') }
>
  <div class="max-w-4xl mx-auto text-center mt-24 mb-12 px-4">
    <h1 class="text-6xl font-bold mb-6 text-main-light dark:text-main-dark">
     {t('contact.title')}
    </h1>

    <p class="text-xl text-secondary-foreground-light dark:text-secondary-foreground-dark max-w-2xl mx-auto mb-12">
      {t('contact.description')}
    </p>

    <div class="flex flex-col items-center gap-8">
      <!-- Social Media Links -->
      <div class="flex gap-6 justify-center">
        <a
          href="https://twitter.com/codarytech"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Twitter"
          class="flex items-center gap-2 text-secondary-foreground-light dark:text-secondary-foreground-dark hover:text-main-light dark:hover:text-main-dark transition-colors text-lg"
        >
          <Icon name="tabler:brand-x" class="size-6" />
          <span>ùïè (Twitter)</span>
        </a>

        <a
          href="https://github.com/codarytech"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          class="flex items-center gap-2 text-secondary-foreground-light dark:text-secondary-foreground-dark hover:text-main-light dark:hover:text-main-dark transition-colors text-lg"
        >
          <Icon name="tabler:brand-github" class="size-6" />
          <span>GitHub</span>
        </a>

        <a
          href="https://linkedin.com/company/codarytech"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          class="flex items-center gap-2 text-secondary-foreground-light dark:text-secondary-foreground-dark hover:text-main-light dark:hover:text-main-dark transition-colors text-lg"
        >
          <Icon name="tabler:brand-linkedin" class="size-6" />
          <span>LinkedIn</span>
        </a>
      </div>

      <div class="mt-4">
        <a
          href={`mailto:${email}`}
          class="inline-flex items-center gap-3 bg-main-button-bg-light text-main-button-light hover:bg-main-button-bg-hover-light dark:bg-main-button-bg-dark dark:text-main-button-dark dark:hover:bg-main-button-bg-hover-dark px-6 py-3 rounded-lg font-medium transition-colors text-lg"
        >
          <Icon name="tabler:mail" class="size-6" />
          {t('contact.email')}
        </a>
        <p class="mt-3 text-sm text-secondary-foreground-light dark:text-secondary-foreground-dark">
          {email}
        </p>
      </div>

      <div class="mt-12 space-y-2 text-secondary-foreground-light dark:text-secondary-foreground-dark">
        <p class="flex items-center justify-center gap-2">
          <Icon name="tabler:map-pin" class="size-5" />
          {t({en:'Valencia, Spain', es:'Valencia, Espa√±a'})}
        </p>
        <p class="flex items-center justify-center gap-2">
          <Icon name="tabler:clock" class="size-5" />
          {t({en:'Monday', es:'Lunes'})} - {t({en:'Friday', es:'Viernes'})}: 9AM - 6PM CET
        </p>
      </div>
    </div>
  </div>
</Layout>
